@model OnlineStore.Models.Entities.Product

<h2 class="mb-4">Створення продукту</h2>
<div class="container" style="width: 500px;">
    <form asp-action="create" asp-controller="home" enctype="multipart/form-data" class="needs-validation">
        <div class="form-group mb-3">
            <label asp-for="@Model.ProductName" class="form-label">Назва продукту</label>
            <input asp-for="@Model.ProductName" class="form-control" required />
            <span asp-validation-for="@Model.ProductName" class="text-danger" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.ProductDescription" class="form-label">Опис продукту</label>
            <textarea asp-for="@Model.ProductDescription" class="form-control"></textarea>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.ProductPrice" class="form-label">Ціна продукту</label>
            <input asp-for="@Model.ProductPrice" id="productPriceInput" inputmode="decimal" class="form-control" required />
            <span asp-validation-for="@Model.ProductPrice" class="text-danger" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.ProductImage" class="form-label">Зображення продукту</label>
            <input asp-for="@Model.ProductImage" accept="image/*" class="form-control-file" />
            <span asp-validation-for="@Model.ProductImage" class="text-danger" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.CategoryId" class="form-label">Категорія</label>
            <select asp-for="@Model.CategoryId" asp-items="ViewBag.Categories" class="form-select"></select>
            <span asp-validation-for="@Model.CategoryId" class="text-danger" />
        </div>
        <div class="form-group mb-4">
            <label asp-for="@Model.SupplierId" class="form-label">Постачальник</label>
            <select asp-for="@Model.SupplierId" asp-items="ViewBag.Suppliers" class="form-select"></select>
            <span asp-validation-for="@Model.SupplierId" class="text-danger" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Створити</button>
        </div>
    </form>
</div>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
